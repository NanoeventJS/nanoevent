{
    "name": "nanoevent",
    "version": "0.0.0",
    "description": "Type-safe event emitter for Node.js and Browser",
    "type": "module",
    "sideEffects": false,
    "main": "out/main/index.js",
    "types": "out/main/index.d.ts",
    "exports": {
        ".": "./out/main/index.js"
    },
    "files": [
        "out/main/**/*"
    ],
    "scripts": {
        "clean": "rm -rf out *.tsbuildinfo",
        "dev": "tsc -b -w",
        "compile": "tsc -b",
        "lint": "eslint --ext=.js,.ts,.vue --cache .",
        "test": "NODE_ENV=test mocha",
        "preversion": "npm run lint",
        "version": "npm run compile",
        "postversion": "npm publish --access=public && git push origin main --tags"
    },
    "pre-commit": [
        "lint"
    ],
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/NanoeventJS/nanoevent.git"
    },
    "keywords": [
        "typed",
        "event",
        "emitter",
        "typesafe",
        "listener",
        "handler"
    ],
    "author": "Boris Okunskiy",
    "license": "ISC",
    "devDependencies": {
        "@nodescript/eslint-config": "^1.0.0",
        "@types/mocha": "^8.2.3",
        "@types/node": "^16.3.1",
        "eslint": "^8.24.0",
        "mocha": "^9.0.2",
        "pre-commit": "^1.2.2",
        "typescript": "^4.3.5"
    }
}
